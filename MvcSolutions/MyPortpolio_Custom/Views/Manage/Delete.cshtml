@model MyPortpolio.Models.Manage

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="col-lg col-md ml-auto mr-auto">
    <div class="card card-login">
        <div class="section section-contacts" style="padding:20px;">
            <div class="row">
                <div class="col-md-11 ml-auto mr-auto">
                    <h3 class="text-center" style="font-weight:bold; color:black; margin-top:0px">Manage</h3>
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Cate)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Cate)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Subject)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Subject)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Contents)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.Raw(Model.Contents)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.RegDate)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.RegDate)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="삭제" class="btn btn-danger" />&nbsp;
                        <a asp-action="Index" class="btn btn-success">리스트</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
