@model MyPortfolio_Oneself.Models.Board

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<script src="~/plugin/ckeditorfull/ckeditor/ckeditor.js"></script>

<div class="col-lg col-md ml-auto mr-auto">
    <div class="card card-login">
        <div class="section section-contacts" style="padding:20px;">
            <div class="row">
                <div class="col-md-11 ml-auto mr-auto">
                    <h3 class="text-center" style="font-weight:bold; color:black; margin-top:0px">Board</h3>
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Subject" class="control-label"></label>
                            <input asp-for="Subject" class="form-control" />
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Writer" class="control-label"></label>
                            <input asp-for="Writer" class="form-control" />
                            <span asp-validation-for="Writer" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            @*<label asp-for="Contents" class="control-label"></label>
                                <textarea asp-for="Contents" class="form-control" rows="10"></textarea>*@
                            @Html.LabelFor(model => model.Contents, new { @class = "control-label" })
                            @Html.TextAreaFor(model => model.Contents,
                                      new { @id = "EditorContents", @class = "form-control", @rows = "10" })
                            <script>CKEDITOR.replace("EditorContents");</script>
                        </div>
                        @*<div class="form-group">
                                <label asp-for="RegDate" class="control-label"></label>
                                <input asp-for="RegDate" class="form-control" />
                                <span asp-validation-for="RegDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ReadCount" class="control-label"></label>
                                <input asp-for="ReadCount" class="form-control" />
                                <span asp-validation-for="ReadCount" class="text-danger"></span>
                            </div>*@
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />&nbsp;
                            <a asp-action="Index" class="btn btn-success">List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
